<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:elevation="0dp"
        android:outlineAmbientShadowColor="#00000000"
        android:outlineSpotShadowColor="#00000000"
        android:paddingHorizontal="8dp"
        android:paddingBottom="18dp">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_busca_pesquisar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pesquisar">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/white" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:text="Já tenho"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/primaryColor"
                app:chipIcon="@drawable/ic_check_circle"
                app:chipIconTint="@color/white" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:text="Já li"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/primaryColor"
                app:chipIcon="@drawable/ic_book"
                app:chipIconTint="@color/white" />

            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="18dp"
                android:text="Quero ler"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/primaryColor"
                app:chipIcon="@drawable/ic_favorite"
                app:chipIconTint="@color/white" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_busca_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostrando 0 resultado(s)"
            android:textColor="@color/black" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_busca_resultado"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:listitem="@layout/item_busca_resultado" />

    <com.google.android.material.bottomappbar.BottomAppBar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/primaryColor"
        android:outlineAmbientShadowColor="#00000000"
        android:outlineSpotShadowColor="#00000000"
        app:elevation="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TODO" />

    </com.google.android.material.bottomappbar.BottomAppBar>

</androidx.coordinatorlayout.widget.CoordinatorLayout>