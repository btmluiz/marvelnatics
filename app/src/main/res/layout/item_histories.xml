<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_comic"
        android:layout_width="300px"
        android:layout_height="450px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_comic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/shape_bkg_stars"
        android:layout_width="160px"
        android:layout_height="30px"
        android:background="@drawable/shape_bkg_stars"
        android:foregroundGravity="right"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_comic"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_comic"/>

    <ImageView
        android:id="@+id/iv_item_star1"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toStartOf="@id/shape_bkg_stars"
        app:layout_constraintTop_toTopOf="@id/shape_bkg_stars"
        app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
        android:layout_marginLeft="10px"
        android:layout_width="25px"
        android:layout_height="25px"/>

    <ImageView
        android:id="@+id/iv_item_star2"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@id/iv_item_star1"
        app:layout_constraintTop_toTopOf="@id/shape_bkg_stars"
        app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
        android:layout_marginLeft="5px"
        android:layout_width="25px"
        android:layout_height="25px"/>

    <ImageView
        android:id="@+id/iv_item_star3"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@id/iv_item_star2"
        app:layout_constraintTop_toTopOf="@id/shape_bkg_stars"
        app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
        android:layout_marginLeft="5px"
        android:layout_width="25px"
        android:layout_height="25px"/>

    <ImageView
        android:id="@+id/iv_item_star4"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@id/iv_item_star3"
        app:layout_constraintTop_toTopOf="@id/shape_bkg_stars"
        app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
        android:layout_marginLeft="5px"
        android:layout_width="25px"
        android:layout_height="25px"/>

    <ImageView
        android:id="@+id/iv_item_star5"
        android:src="@drawable/ic_baseline_star_24"
        app:layout_constraintStart_toEndOf="@id/iv_item_star4"
        app:layout_constraintTop_toTopOf="@id/shape_bkg_stars"
        app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
        android:layout_marginLeft="5px"
        android:layout_width="25px"
        android:layout_height="25px"/>





</androidx.constraintlayout.widget.ConstraintLayout>