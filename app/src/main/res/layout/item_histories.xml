<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_item_comic"
        android:layout_width="114dp"
        android:layout_height="171dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_comic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/shape_bkg_stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bkg_stars"
        android:foregroundGravity="right"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_comic"
        app:layout_constraintEnd_toEndOf="@+id/iv_item_comic">

        <!--        <ImageView-->
        <!--            android:id="@+id/shape_bkg_stars"-->
        <!--            android:layout_width="160px"-->
        <!--            android:layout_height="30px"-->
        <!--            android:background="@drawable/shape_bkg_stars"-->
        <!--            android:foregroundGravity="right"-->
        <!--            app:layout_constraintBottom_toBottomOf="@+id/iv_item_comic"-->
        <!--            app:layout_constraintEnd_toEndOf="@+id/iv_item_comic" />-->

        <ImageView
            android:id="@+id/iv_item_star1"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
            app:layout_constraintStart_toStartOf="@id/shape_bkg_stars"
            app:layout_constraintTop_toTopOf="@id/shape_bkg_stars" />

        <ImageView
            android:id="@+id/iv_item_star2"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
            app:layout_constraintStart_toEndOf="@id/iv_item_star1"
            app:layout_constraintTop_toTopOf="@id/shape_bkg_stars" />

        <ImageView
            android:id="@+id/iv_item_star3"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
            app:layout_constraintStart_toEndOf="@id/iv_item_star2"
            app:layout_constraintTop_toTopOf="@id/shape_bkg_stars" />

        <ImageView
            android:id="@+id/iv_item_star4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
            app:layout_constraintStart_toEndOf="@id/iv_item_star3"
            app:layout_constraintTop_toTopOf="@id/shape_bkg_stars" />

        <ImageView
            android:id="@+id/iv_item_star5"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="2dp"
            android:src="@drawable/ic_baseline_star_24"
            app:layout_constraintBottom_toBottomOf="@id/shape_bkg_stars"
            app:layout_constraintStart_toEndOf="@id/iv_item_star4"
            app:layout_constraintTop_toTopOf="@id/shape_bkg_stars" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>