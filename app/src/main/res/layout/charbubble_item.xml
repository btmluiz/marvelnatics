<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- implementar as imagens arredondadas ou um shape diferenciado -->
    <ImageView
        android:id="@+id/iv_char_bubble"
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:backgroundTint="@color/primaryBlue"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_char_place"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:clickable="false"
        app:layout_constraintCircleRadius="100dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/primaryColor"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="90dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/iv_char_bubble"
        app:layout_constraintStart_toStartOf="@+id/iv_char_bubble" />
</androidx.constraintlayout.widget.ConstraintLayout>